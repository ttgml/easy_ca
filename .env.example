# Flask 应用配置
# 注意：FLASK_APP 不需要设置，因为我们的入口文件是 run.py
FLASK_ENV=development
FLASK_CONFIG=development
FLASK_DEBUG=True
FLASK_RUN_HOST=127.0.0.1
FLASK_RUN_PORT=5000

# 应用密钥
# 生产环境中请使用随机生成的安全密钥
SECRET_KEY=dev-secret-key-change-in-production

# 数据库配置 - SQLite
# 开发环境使用SQLite数据库
DATABASE_URL=sqlite:///easy_ca.db

# 数据库配置 - PostgreSQL (取消注释使用)
# 生产环境建议使用PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/easy_ca

# 管理员邮箱
ADMIN_EMAIL=admin@example.com

# 用户注册配置
# 设置为True允许用户注册，False禁用用户注册
ALLOW_USER_REGISTRATION=True

# 会话配置
# 会话Cookie名称
SESSION_COOKIE_NAME=easy_ca_session
# 会话有效期（天）
PERMANENT_SESSION_LIFETIME_DAYS=7

# 数据库连接池配置 (仅生产环境有效)
# 当使用PostgreSQL时的连接池大小
# DB_POOL_SIZE=10
# 最大溢出连接数
# DB_MAX_OVERFLOW=20
# 连接超时时间（秒）
# DB_POOL_TIMEOUT=30
